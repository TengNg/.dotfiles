export XDG_CONFIG_HOME=$HOME/.config
export NVIM_APPNAME=nvim

export ANDROID_HOME=$HOME/Android/Sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/platform-tools

VIM="nvim"

# this is very nice
bindkey -s ^f "tmux-sessionizer\n"
bindkey -s ^s "cd \$(find ~ ~/study/ ~/personal/ ~/personal/react/ ~/personal/faround/ -mindepth 1 -maxdepth 1 -type d | fzf)\n"

# functions
take() {
    mkdir -p $1
    cd $1
}

note() {
    if [ $# -eq 0 ]; then
        echo "No arguments supplied"
        echo "-- Usage -- "
        echo "> list : view all notes"
        echo "> edit : open notes.txt to edit"
        echo "> write <message>: take note"
        return
    fi
    if [ $1 = "list" ]; then
        cat ~/personal/_notes.txt
    elif [ $1 = "edit" ]; then
        nvim ~/personal/_notes.txt
    elif [ $1 = "write" ]; then
        echo "date : $(date)" >> $HOME/personal/_notes.txt
        echo "msg  : ${@:2}" >> $HOME/personal/_notes.txt
        echo "" >> $HOME/personal/_notes.txt
    else
        echo "Argument is not correct"
        echo "-- Usage -- "
        echo "> list : view all notes"
        echo "> edit : open notes.txt to edit"
        echo "> write <message>: take note"
    fi
}

